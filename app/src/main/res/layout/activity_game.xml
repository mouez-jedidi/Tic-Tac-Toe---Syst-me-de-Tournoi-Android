<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_modern">

    <!-- Header avec scores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_modern"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <!-- NumÃ©ro de partie -->
        <TextView
            android:id="@+id/tvPartieNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partie 1 / 5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Scores en ligne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Score X -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/score_x_modern"
                android:padding="16dp"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âŒ"
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/tvScoreX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joueur X"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Score Nul -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/score_null_modern"
                android:padding="16dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤"
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/tvScoreNul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nulles"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Score O -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/score_o_modern"
                android:padding="16dp"
                android:layout_marginStart="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­•"
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/tvScoreO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joueur O"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Tour actuel avec animation -->
        <TextView
            android:id="@+id/tvTourActuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour de âŒ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/player_x_primary"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="@drawable/turn_indicator"/>
    </LinearLayout>

    <!-- Grille de jeu ADAPTATIVE -->
    <com.moez.jeuxo.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/card_modern"
        android:elevation="8dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="false"/>
    </com.moez.jeuxo.SquareLayout>


</LinearLayout>